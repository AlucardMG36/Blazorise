@namespace Blazorise
<CascadingValue Value="@this" IsFixed>
    <Modal @ref="modalRef">
        <ModalContent>
            @if (useModalStructure)
            {
                <ModalHeader>
                    @if (!string.IsNullOrWhiteSpace(title))
                    {
                        <ModalTitle>
                            @title
                        </ModalTitle>
                    }
                    <CloseButton />
                </ModalHeader>
                <ModalBody>
                    @childContent
                </ModalBody>
            }
            else
            {
                @childContent
            }
        </ModalContent>
    </Modal>
</CascadingValue>